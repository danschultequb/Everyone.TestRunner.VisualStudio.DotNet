<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Everyone</RootNamespace>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>Everyone.TestRunner.VisualStudio.DotNet.Tests</PackageId>
    <VersionPrefix>1.0.0</VersionPrefix>
    <VersionSuffix>dev</VersionSuffix>
    <Title>Everyone.TestRunner.VisualStudio.DotNet.Tests</Title>
    <Company>everyone</Company>
    <Authors>everyone</Authors>
    <RepositoryUrl>https://github.com/danschultequb/Everyone.TestRunner.VisualStudio.DotNet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <IsPublishable>False</IsPublishable>
    <IsPackable>True</IsPackable>
    <IsTestProject>True</IsTestProject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Everyone.TestRunner.VisualStudio.DotNet\Everyone.TestRunner.VisualStudio.DotNet.csproj" />
  </ItemGroup>

</Project>
